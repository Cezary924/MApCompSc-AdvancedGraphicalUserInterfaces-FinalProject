            <ComboBox x:Name="ComboBox_0_1_1" IsEnabled="False" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="126" SelectedIndex="0"/>
            <ComboBox x:Name="ComboBox_0_1_3" IsEnabled="False" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="126" SelectedIndex="0"/>
        </Grid>
        <Label x:Name="Label_0_2_0" Grid.Column="2" Content="Tura" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="Label_0_2_1" Grid.Row="0" Grid.Column="2" Content="-" HorizontalAlignment="Center" Margin="0,45,0,0" VerticalAlignment="Top" FontSize="20" Foreground="White"/>
        <Button x:Name="Button_0_2_0" Grid.Column="2" Content="Dalej" IsEnabled="False" HorizontalAlignment="Center" Margin="0,90,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.641,0.763" Width="125" Height="25" FontSize="16" Background="#FF7F78C7" UseLayoutRounding="False" Click="Button_0_2_0_Click"/>
        <Label x:Name="Label_1_0_0" Grid.Row="1" Grid.Column="0" Content="Ruch" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" FontSize="20" Foreground="White" FontWeight="Bold"/>
