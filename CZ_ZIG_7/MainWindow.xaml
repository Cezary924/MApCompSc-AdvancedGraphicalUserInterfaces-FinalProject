        <Label x:Name="Label_1_1_0" Grid.Row="1" Grid.Column="1" Content="Gra nierozpoczęta" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="24" Foreground="Red" FontWeight="Bold"/>
        <Label x:Name="Label_1_1_1" Visibility="Hidden" Grid.Row="1" Grid.Column="1" Content="-" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White" FontStyle="Italic"/>
