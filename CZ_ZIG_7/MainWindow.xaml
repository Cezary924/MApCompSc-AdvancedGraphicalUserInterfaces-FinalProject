        </ComboBox>
        <Button x:Name="Button_0_0_0" Content="Nowa gra" HorizontalAlignment="Center" Margin="0,90,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.641,0.763" Width="125" Height="25" FontSize="16" Background="#FF7F78C7" UseLayoutRounding="False" Click="Button_0_0_0_Click"/>
