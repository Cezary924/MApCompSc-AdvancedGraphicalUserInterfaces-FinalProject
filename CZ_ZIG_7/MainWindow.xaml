            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="Label_0_1_0" Grid.Row="0" Grid.Column="1" Content="Statystyki" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20" Foreground="White" FontWeight="Bold"/>
            <Label x:Name="Label_0_1_1" Content="Gracz 1" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Margin="0,18,0,0" VerticalAlignment="Top" FontSize="16" Foreground="#C77D78" FontStyle="Italic"/>
            <Label x:Name="Label_0_1_3" Content="Gracz 2" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" Margin="0,18,0,0" VerticalAlignment="Top" FontSize="16" Foreground="#C2C778" FontStyle="Italic"/>
            <Label x:Name="Label_0_1_2" Content="- KG" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White"/>
            <Label x:Name="Label_0_1_4" Content="- KG" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White"/>
            <Label x:Name="Label_0_1_5" Content="Stan konta" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White" FontStyle="Italic"/>
            <Label x:Name="Label_0_1_6" Content="Lista budowli" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" Margin="0,-3,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White" FontStyle="Italic"/>
            <Label x:Name="Label_0_1_7" Content="Lista kart" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" Margin="0,-5,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White" FontStyle="Italic"/>
